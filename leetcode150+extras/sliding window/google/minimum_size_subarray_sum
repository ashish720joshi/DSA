
class Solution {
    public int minSubArrayLen(int target, int[] nums) {
    int n=nums.length;
	int i=0,sum=0,k=0;
    int min=Integer.MAX_VALUE;
    while(i<n){
        sum+=nums[i];
		while(sum>=target){
		    min=Math.min(i-k+1,min);
            sum-=nums[k];
            k++;
         }
	i++;
    }
    return min==Integer.MAX_VALUE?0:min;
    }
}