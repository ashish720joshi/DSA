// sorting of individual string and then add to map

class Solution {
    public List<List<String>> groupAnagrams(String[] strs) {
        Map<String,List<String>>anagramMap=new HashMap<>();
        for(String s:strs){
            char[]wordArray=s.toCharArray();
            Arrays.sort(wordArray);
            String word=new String(wordArray);
            if(!anagramMap.containsKey(word)){
                anagramMap.put(word,new ArrayList<>());
            }
            anagramMap.get(word).add(s);
        }

        return new ArrayList<>(anagramMap.values());
    }
}


class Solution {
    public List<List<String>> groupAnagrams(String[] strs) {
        List<List<String>>outputList=new ArrayList<>();
        Map<String,List<String>>map=new HashMap<>();
        for(String str:strs){
            List<String>list=new ArrayList<>();
            char charArray[]=str.toCharArray();
            Arrays.sort(charArray);
            String key=new String(charArray);
            if(map.containsKey(key)){
                list=map.get(key);
                list.add(str);
                map.put(key,list);
            }else{
                list.add(str);
                map.put(key,list);
            }
        }
        for(String key:map.keySet()){
            List<String>output=map.get(key);
            outputList.add(output);
        }
        return outputList;
    }
}